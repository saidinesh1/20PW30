
@import url('https://fonts.googleapis.com/css2?family=Smooch+Sans:wght@300&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Smooch+Sans:wght@300&family=Tapestry&display=swap');
*{
    margin:0;
    padding:0;
    box-sizing:border-box;
    font-family:'Smooch Sans', sans-serif;
}
h1{
    font-size:20px;
    line-height:80px;
    color: #222;
    font-weight:600;
    
}
h2{
    font-size:70px;
    line-height:60px;
    color: #222;
}
h4{
    font-size:55px;
    color: #222;
}
h6{
    font-weight:700;
    font-size:15px;
}
p{
      font-size:10px;
      font-weight: bolder;
      font-family: 'Smooch Sans', sans-serif;
      margin:15px 0 20px 0;
      background: linear-gradient(to right, #f58c36,#e91f1f, #41bbeb, #2608d3);
      -webkit-text-fill-color:transparent;
      -webkit-background-clip: text;
}
.section-p1{
    padding:40px 80px;
}
.section-m1{
    margin:40px 0;
}
body{
    width:100%;
    background:#EDE6DB;
}
/*header*/
#header{
    display:flex;
    align-items:center;
    justify-content:space-between;
    padding:20px 80px;
    background:white;
    box-shadow:0 10px 15px rgb(0,0,0,0.6);
    position:sticky;
    z-index: 999;
    left:0;
    top:0;
}
#navbar
{
    display:flex;
    align-items:center;
    justify-content:center;
    
}
#navbar li
{
    list-style:none;
    padding:0 20px;
    position:relative;
}
#navbar li a{
    text-decoration: none;
    font-size:16px;
    font-weight:600;
    color:rgb(13, 8, 39);
    transition: 0.3s ease;;
}
#navbar li a:hover,
#navbar li a:active{
    color:skyblue;
}
#navbar li a.active::after,
#navbar li a:hover::after{
    content:"";
    width:30%;
    height:2px;
    background:skyblue;
    position:absolute;
    bottom: -4px;
    left:20px;
}
#hero{
    display:inline-block;
    background-image:url("images/bg.jpg");
    background-size:cover;
    background-position: right 0 ;
    height:90vh;
    width:100%;
    padding: 60px 20px;
    display:flex;
    flex-direction: column;
    justify-content:center;
    align-items:flex-start;
}
#hero button{
    background-image: url("images/button.png");
    background-repeat: no-repeat;
    background-color:transparent;
    border:0;
    color:rgb(192, 28, 28);
    cursor:pointer;
    padding:14px 80px 14px 65px;
    font-weight:700;
    font-size:20px;
}
#feature{
    display:flex;
    align-items:center;
    justify-content: space-between;
    flex-wrap:wrap ;
}
#feature .fe-box{
    width:180px;
    text-align:center;
    padding:25px 15px;
    box-shadow: 20px 20px 34px rgb(0,0,0,0.3);
    border: 1px solid #cce7d0;
    border-radius: 4px;
    margin:15px 0;
}
#feature .fe-box:hover{
    box-shadow: 10px 10px 54px rgba(70,62,221,0.1);
}
#feature .fe-box h6{
    display:inline-block;
    padding:9px 8px 6px 8px;
    line-height: 1;
    border-radius: 4px;
    color:#088178;
    background-color: #fddde4;
}
#feature .fe-box img{
    width:100%;
    margin-bottom:10px;
}
#feature .fe-box:nth-child(2) h6{
     background-color:#cdebbc;
}
#feature .fe-box:nth-child(3) h6{
    background-color:#d1e8f2;
}
#feature .fe-box:nth-child(4) h6{
    background-color:#cdd4f8;
}
#feature .fe-box:nth-child(5) h6{
    background-color:#f6dbf6;
}
#feature .fe-box:nth-child(6) h6{
    background-color:#fff2e5;
}
#product1{
    text-align:center;   
}
#product1 .pro{
    width:23%;
    min-width:250px;
    padding:10px 12px;
    border:1px solid #cce7d0;
    border-radius:25px;
    cursor:pointer;
    box-shadow:20px 20px 30px rgba(0,0,0,0.02);
    margin:15px 0;
    transition: 0.03s ease;
    background-color:rgb(252, 248, 248);
    position:relative;
}
#product1 .pro:hover{
    box-shadow:20px 20px 30px rgba(0,0,0,0.06);
}
#product .pro img{
    width:100%;
    border-radius:20px;
}
#product1 .pro .des{
    text-align: start;
    padding:10px 0;
}
#product1 .pro .des span{
    color:rgb(4, 5, 77);
}
#product1 .pro .des h5{
    padding-top:7px;
    color:#1a1a1a;
    font-size:18px;
}
#product1 .pro .des i{
    font-size:20px;
    color:rgb(228,214,24);
}
#product1 .pro .des h4{
    padding-top:7px;
    font-size:30px;
    font-weight:700;
    color:#088178;
}
#product1 .pro .cart{
    width:40px;
    height:40px;
    line-height:40px;
    border-radius:50px;
    background-color:#e8f6ea;
    font-weight:500;
    color:#088178;
    border:1px solid #cce7d0;
    position:absolute;
    bottom: 20px;
    right: 10px;
}
#product1 .pro-container{
    display:flex;
    justify-content:space-between;
    padding-top:20px ;
    flex-wrap:wrap;
}
#banner{
    display:flex;
    justify-content:center;
    align-items:center;
    text-align:center;
    background-image: url("IMAGES/sbanner.jpg");
    background-repeat: no-repeat;
    height:75vh;
    background-size: cover;
    background-position: center;
}
#bannerwords {
    position:relative;
    bottom:10px;
    right:350px;
}
#bannerwords h4{
    font-size:60px;
    color:#112B3C;
    font-family: 'Smooch Sans', sans-serif;
    font-family: 'Tapestry', cursive;
}
.ban{
    width:140px;
    height:60px;
    color:#1a1a1a;
    font-size:32px;
    border-radius: 20px;
    background:#112B3C;
    color:white;
    border-style: none;
    transition: color 0.5s;
}
.ban:hover{
    background:white;;
    color:#112B3c;
    font-weight:700;
}
#sm-banner{
    display:flex;
    justify-content: space-between;
    flex-wrap:wrap;
}
#sm-banner .banner-box1{
    justify-content:center;
    align-items:center;
    text-align:center;
    background-image: url("IMAGES/smban1.jpg");
    min-width:660px;
    height:50vh;
    background-size: cover;
    background-position: center;
}
#sm-banner .banner-box2{
    justify-content:center;
    align-items:center;
    text-align:center;
    background-image: url("IMAGES/smban2.jpg");
    min-width:660px;
    height:50vh;
    background-size: cover;
    background-position: center;
}
#sm-banner .banner-box1 h4{
    font-family: 'Smooch Sans', sans-serif;
    font-family: 'Tapestry', cursive;
    color:white;
    font-size:60px;
}
#sm-banner .banner-box1 h2{
    font-family: 'Smooch Sans', sans-serif;
    font-family: 'Tapestry', cursive;
    background: linear-gradient(to right, red,yellow,orange,white);
    -webkit-text-fill-color:transparent;
    -webkit-background-clip: text;
    font-size:40px;
}
.banner-box button{
    background:white;
    width:140px;
    height:40px;
    font-size:30px;
    border-style:none;
    border-radius:20px;
    background:linear-gradient(to right,red,rgb(158, 158, 3),orange,rgb(4, 76, 124));
    cursor:pointer;
    font-weight:700;
}